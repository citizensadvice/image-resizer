{
  "name": "image-resize",
  "version": "1.0.0",
  "description": "Serverless image resizing",
  "readme": "Serverless image resizing",
  "repository": "https://github.com/citizensadvice/serverless-image-resize",
  "license": "Apache-2.0",
  "main": "index.js",
  "dependencies": {
    "sharp": "^0.25.4",
    "color": "3.1.2",
    "color-name": "1.1.4"
  },
  "devDependencies": {
    "aws-sdk": "2.631.0",
    "aws-sdk-mock": "^4.4.0",
    "mocha": "^6.1.4",
    "sinon": "^7.3.2",
    "jest": "^24.7.1"
  },
  "scripts": {
    "pretest": "npm run build:init && npm install",
    "test": "jest",
    "build:init": "rm -rf .aws-sam/ dist/ node_modules/",
    "build:zip": "zip -rq image-resizer.zip .",
    "build:dist": "mkdir dist && mv image-resizer.zip dist/",
    "build": "npm run build:init && npm install --arch=x64 --platform=linux --production",
    "debug": "sam local invoke ImageResizerHandlerFunction --event events/event-s3.json --parameter-overrides AppBucketName=test-bucket"
  },
  "jest": {
    "testPathIgnorePatterns": [
      ".aws-sam/"
    ]
  }
}
